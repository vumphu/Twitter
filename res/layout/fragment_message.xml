                    android:layout_alignParentTop="true"
                    android:text="@string/rose_user"
                    android:textAppearance="@style/message_font"
                    android:textSize="16sp">


                </TextView>

            </LinearLayout>

            <TextView
                android:layout_width="187dp"
                android:layout_height="19dp"
